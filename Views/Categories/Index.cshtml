@model IEnumerable<ProjectApp.Models.Category>

@{
    ViewBag.Title = "Index";
}

@if (User.IsInRole("Admin"))
{
    <h2 class="text-center mt-3 mb-3">Lista wszystkich kategorii:</h2>
    <div class="d-flex flex-row-reverse bd-highlight">
        @Html.ActionLink("Dodaj nową kategorie", "Create", "Categories", routeValues: null, htmlAttributes: new { @class = "btn btn-primary btn-lg m-4" })
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>Opcje dodatkowe</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edytuj", "Edit", new { id = item.ID }, htmlAttributes: new { @class = "btn btn-sm btn-info" }) |
                        @Html.ActionLink("Usuń", "Delete", new { id = item.ID }, htmlAttributes: new { @class = "btn btn-sm btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2 class="text-center mt-3 mb-3">Wybierz kategorię która Cię interesuje:</h2>
    <div class="text-center mt-5 mb-5">
        @foreach (var item in Model)
        {
            @Html.ActionLink(item.Name, "GetFromCategories", "Products", new { name = item.Name }, htmlAttributes: new { @class = "btn btn-primary btn-lg m-1" })
        }
        </div>
}
<script type="text/javascript">
    $(document).ready(function () {
        $('#table_id').DataTable();
    });
</script>
